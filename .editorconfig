# EditorConfig is awesome: https://EditorConfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
tab_width = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 250

[*.lang]
trim_trailing_whitespace = false
ij_properties_keep_blank_lines = true

[*.{json,mcmeta,yml}]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false
